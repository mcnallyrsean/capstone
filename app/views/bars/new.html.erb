<h1>Add a bar</h1>

<%= form_tag '/bars', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :location %>
    <%= text_field_tag :location %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  <div>
    <%= label_tag :hours_of_operation %>
    <%= text_field_tag :hours_of_operation %>
  </div>
  <div>
    <%= label_tag :status %>
    <%= text_field_tag :status %>
  </div>
  <%= submit_tag 'Add the bar' %>
<% end %>