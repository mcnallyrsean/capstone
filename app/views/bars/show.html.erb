<style>
  #check-in-thumb{
    width: 150px;
    height: 100px;
  }
  .bar-show-image{
    height: 400px;
    width: 450px;
    border-radius: 40px;
  }
  #pushdown{
    margin-top: 20px;
  }
  .page-header{
    margin-top: 20px;
  }
  h1{
    color: white;
    margin-top: 15px;
  }
  h2{
    color: white;
  }
  .caption{
    color: black;
  }
</style>

<div class="container">
  <div class="row" id="pushdown">
    <div class="col-md-6">
      <% if @photo_reference.present? %>
        <img class="bar-show-image" src="<%= @bar_photos %>">
      <% else %>
        <img class="bar-show-image" src="http://vignette3.wikia.nocookie.net/simpsons/images/2/27/Moes_tavern3.jpg/revision/20111118202700">
      <% end %>
    


      <div class="page-header">
        <h1><%= @bar.name %></h1>
      </div>
      <h2><%= @bar.address %></h2>
      <% unless @bar_attributes.empty? %>
        <h2><%= @bar_attributes['result']['formatted_phone_number'] %></h2>
      <% end %> 
    </div> 


    <div class="col-md-6">
      <div style='width: 100%;'>
        <div id="map" style='width: 550px; height: 400px; border-radius: 40px;'></div>
      </div>
      <h1><strong>Check-Ins</strong></h1>
      <% if @bar.check_ins.present? %>
      <!-- <div class="col-sm-8 col-md-6"> -->
        <% @bar.check_ins.each do |check_in| %>
        <div class="col-sm-8 col-md-6">
          <div class="thumbnail">
            <img id="check-in-thumb" src="http://www.becomingminimalist.com/wp-content/uploads/2011/11/51-Untruths-From-Television.jpg">
            <div class="caption">
              <h3><%= check_in.game.team_1.name %> vs. <%= check_in.game.team_2.name %></h3>
               <p>Check In ID: <%= check_in.id %></p>
               <p>Date: <%= check_in.game.date %></p>
               <p>User: <%= check_in.user.first_name %> <%= check_in.user.last_name %></p>
            </div>
          </div>
        </div>
        <% end %>
      <!-- </div> -->
      <% else %>
        <p>Sorry, no check-ins at this bar.</p>
      <% end %>
    </div>
</div>

