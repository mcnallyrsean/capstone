<h1>Edit a bar</h1>

<%= form_tag '/bars', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @bar.name %>
  </div>
  <div>
    <%= label_tag :location %>
    <%= text_field_tag :location, @bar.location %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @bar.description %>
  </div>
  <div>
    <%= label_tag :hours_of_operation %>
    <%= text_field_tag :hours_of_operation, @bar.hours_of_operation %>
  </div>
  <div>
    <%= label_tag :status %>
    <%= text_field_tag :status, @bar.status %>
  </div>
  <%= submit_tag 'Edit the bar' %>
<% end %>